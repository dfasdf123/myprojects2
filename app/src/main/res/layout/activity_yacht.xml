                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="Chance 3/3"
                android:textColor="@color/white"
                android:fontFamily="@font/katuri"
                android:textSize="15dp" />

        </LinearLayout>
    </LinearLayout>

